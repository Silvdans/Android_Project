<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentsInfosActivity"
    android:orientation="vertical">

    <include
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageViewStudent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/infoViewStudent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/nameViewStudent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/firstnameViewStudent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/emailViewStudent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/groupeViewStudent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18dp"/>


        </LinearLayout>
</LinearLayout>